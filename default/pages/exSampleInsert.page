<apex:page standardController="Sample__c">
    <apex:form >
        <apex:pageBlock title="Add Project">
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1"> 
                <apex:inputField value="{!Sample__c.Project_Name__c}"/>
                <apex:inputField value="{!Sample__c.Description__c}"/>
                <apex:inputField value="{!Sample__c.Technologies__c}"/>
                <apex:inputField value="{!Sample__c.Status__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>        
    </apex:form>
</apex:page>